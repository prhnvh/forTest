<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <EditText
        android:id="@+id/calcInputText"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:backgroundTint="@color/white"
        android:focusable="false"
        android:maxLength="13"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/grey"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/calcResultText"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:backgroundTint="@color/white"
        android:focusable="false"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/white_grey"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calcInputText" />


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:columnCount="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calcResultText">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnSin"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:background="@drawable/semirounded_corner"
                android:backgroundTint="@color/button_main"
                android:enabled="false"
                android:onClick="handleBtnPress"
                android:scaleX="0"
                android:scaleY="0"
                android:text="sin"
                android:textColor="@color/black"
                android:textSize="21dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnCos"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:background="@drawable/semirounded_corner"
                android:backgroundTint="@color/button_main"
                android:enabled="false"
                android:onClick="handleBtnPress"
                android:scaleX="0"
                android:scaleY="0"
                android:text="cos"
                android:textColor="@color/black"
                android:textSize="21dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSquareRoot"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:background="@drawable/semirounded_corner"
                android:backgroundTint="@color/button_main"
                android:enabled="false"
                android:onClick="handleBtnPress"
                android:scaleX="0"
                android:scaleY="0"
                android:text="âˆš"
                android:textColor="@color/black"
                android:textSize="21dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnLog"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:background="@drawable/semirounded_corner"
                android:backgroundTint="@color/button_main"
                android:enabled="false"
                android:onClick="handleBtnPress"
                android:scaleX="0"
                android:scaleY="0"
                android:text="ln"
                android:textColor="@color/black"
                android:textSize="21dp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/clearBtn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:background="@drawable/semirounded_corner"
                android:backgroundTint="@color/button_main"
                android:onClick="clearCalcInput"
                android:text="C"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <Button
                android:id="@+id/backspaceBtn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:background="@drawable/semirounded_corner"
                android:backgroundTint="@color/button_main"
                android:onClick="deleteLastInputChar"
                android:text="âŒ«"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <Button
                android:id="@+id/engineerCalculatorBtn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:background="@drawable/semirounded_corner"
                android:backgroundTint="@color/button_main"
                android:onClick="openEngineerCalc"
                android:text="..."
                android:textColor="@color/black"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:background="@drawable/semirounded_corner"
                android:backgroundTint="@color/button_main"
                android:onClick="handleBtnPress"
                android:text="/"
                android:textSize="30dp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn7"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:background="@drawable/semirounded_corner"
                android:backgroundTint="@color/button_main"
                android:onClick="handleBtnPress"
                android:text="7"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:background="@drawable/semirounded_corner"
                android:backgroundTint="@color/button_main"
                android:onClick="handleBtnPress"
                android:text="8"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:background="@drawable/semirounded_corner"
                android:backgroundTint="@color/button_main"
                android:onClick="handleBtnPress"
                android:text="9"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btnMultiply"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:background="@drawable/semirounded_corner"
                android:backgroundTint="@color/button_main"
                android:onClick="handleBtnPress"
                android:text="*"
                android:textSize="30dp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn4"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:background="@drawable/semirounded_corner"
                android:backgroundTint="@color/button_main"
                android:onClick="handleBtnPress"
                android:text="4"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:background="@drawable/semirounded_corner"
                android:backgroundTint="@color/button_main"
                android:onClick="handleBtnPress"
                android:text="5"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:background="@drawable/semirounded_corner"
                android:backgroundTint="@color/button_main"
                android:onClick="handleBtnPress"
                android:text="6"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:background="@drawable/semirounded_corner"
                android:backgroundTint="@color/button_main"
                android:onClick="handleBtnPress"
                android:text="-"
                android:textSize="30dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:background="@drawable/semirounded_corner"
                android:backgroundTint="@color/button_main"
                android:onClick="handleBtnPress"
                android:text="1"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:background="@drawable/semirounded_corner"
                android:backgroundTint="@color/button_main"
                android:onClick="handleBtnPress"
                android:text="2"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:background="@drawable/semirounded_corner"
                android:backgroundTint="@color/button_main"
                android:onClick="handleBtnPress"
                android:text="3"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:background="@drawable/semirounded_corner"
                android:backgroundTint="@color/button_main"
                android:onClick="handleBtnPress"
                android:text="+"
                android:textSize="30dp" />
        </TableRow>


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn0"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:background="@drawable/semirounded_corner"
                android:backgroundTint="@color/button_main"
                android:onClick="handleBtnPress"
                android:text="0"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btnPI"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:background="@drawable/semirounded_corner"
                android:backgroundTint="@color/button_main"
                android:onClick="handleBtnPress"
                android:text="ð…"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btnPoint"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:background="@drawable/semirounded_corner"
                android:backgroundTint="@color/button_main"
                android:onClick="handleBtnPress"
                android:text="."
                android:textSize="30dp" />

            <Button
                android:id="@+id/btnCalculate"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/button_main"
                android:onClick="handleBtnPress"
                android:text="="
                android:textSize="30dp" />
        </TableRow>

    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>